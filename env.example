#*****************************************************************
# CORE CONFIGURATION & CONTROL
#*****************************************************************
# Sets the TTS engine to use.
TTS_ENGINE=ONLINE
# The maximum number of characters per segment for TTS processing.
CHUNK_SIZE=3500
# The speaking rate (speed). 1.0 is normal. Use a float (e.g., 1.1).
SPEAKING_RATE=1.1

#*****************************************************************
# OUTPUT CONFIGURATION
#*****************************************************************
# Sets the output mode. AUDIO (read aloud) or FILE (export to MP3).
OUTPUT_TYPE=AUDIO
# Maximum duration in seconds for a single exported MP3 segment (used only when OUTPUT_TYPE=FILE).
MAX_FILE_DURATION=600
# If provided, deletes the output directory and all contents (MP3s and .progress file) before starting.
CLEAN_OUTPUT_DIRECTORY=False

#*****************************************************************
# OFFLINE ENGINE CONFIGURATION (pyttsx3/SAPI)
#*****************************************************************
# ID/Name of the desired voice. (e.g., 'Microsoft Jakub').
OFFLINE_VOICE_ID=

#*****************************************************************
# LANGUAGE CONFIGURATION
#*****************************************************************
# Language code (IETF BCP 47) for G_CLOUD/gTTS processing (e.g., cs-CZ, en-US).
LANGUAGE_CODE=cs-CZ

#*****************************************************************
# GOOGLE CLOUD CONFIGURATION (G_CLOUD)
#*****************************************************************
# Path to the Google Cloud service account JSON key file.
G_CLOUD_CREDENTIALS=./google-key.json
# Name of the WaveNet/Studio voice to use.
WAVENET_VOICE=cs-CZ-Wavenet-B

#*****************************************************************
# COQUI CONFIGURATION (Offline AI TTS)
#*****************************************************************
# COQUI model path/name (e.g., tts_models/cs/cv/vits).
COQUI_MODEL_NAME=tts_models/cs/cv/vits
# Speaker ID for multi-speaker models (leave empty if not applicable).
COQUI_SPEAKER_NAME=
# Sample rate for exported audio.
COQUI_SAMPLE_RATE=22050